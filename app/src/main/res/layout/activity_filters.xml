                <TextView
                    android:id="@+id/Rtop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="R"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/Gtop"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Gtop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="G"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toStartOf="@id/Btop"
                    app:layout_constraintStart_toEndOf="@id/Rtop"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/Btop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="B"
                    android:textSize="20sp"
                    app:layout_constraintStart_toEndOf="@id/Gtop"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                    </TableRow>
                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="100dp">
                        <TextView
                            android:id="@+id/blank2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text=""
                            android:textSize="20sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/Rleft"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/Rleft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="R"
                            android:textSize="20sp"
                            app:layout_constraintStart_toEndOf="@id/blank2"
                            app:layout_constraintTop_toTopOf="parent" />
                        <EditText
                            android:id="@+id/RtoR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:width="40dp"
                            android:text="255"
                            android:ems="10"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            app:layout_constraintStart_toEndOf="@id/Rleft" />
                        <EditText
                            android:id="@+id/RtoG"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:width="40dp"
                            android:text="0"
                            android:ems="10"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            app:layout_constraintStart_toEndOf="@id/RtoR" />
                        <EditText
                            android:id="@+id/RtoB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:width="40dp"
                            android:text="0"
                            android:ems="10"
                            android:gravity="center"
                            android:imeOptions="actionDone"
