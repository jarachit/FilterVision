                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.2"
                            android:width="40dp"
                            android:text="255"
                            android:ems="10"
                            android:gravity="center"
                            android:imeOptions="actionDone"
                            android:inputType="number"
                            app:layout_constraintStart_toEndOf="@id/BtoG" />
                    </TableRow>
                </TableLayout>
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="A"
                    android:textSize="20sp"
                    app:layout_constraintBottom_toBottomOf="@+id/alpha_slider"
                    app:layout_constraintEnd_toStartOf="@+id/alpha_slider"
                    app:layout_constraintHorizontal_bias="0.505"
                    app:layout_constraintStart_toStartOf="parent" />

                <SeekBar
                    android:id="@+id/alpha_slider"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:buttonTint="@color/purple_700"
                    android:max="255"
                    android:progress="255"
                    app:layout_constraintTop_toBottomOf="@+id/table"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                    android:id="@+id/alpha_number"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:width="40dp"
                    android:ems="10"
                    android:text="255"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    app:layout_constraintBottom_toBottomOf="@+id/alpha_slider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.507"
                    app:layout_constraintStart_toEndOf="@+id/alpha_slider" />

                <RadioGroup
                    android:id="@+id/button_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:translationZ="90dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    app:layout_constraintVertical_bias="0.04">

                    <RadioButton
                        android:id="@+id/custom_button"
                        android:layout_weight="0.25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickTop"
                        android:text="@string/custom_button" />

                    <RadioButton
                        android:id="@+id/default_button"
                        android:layout_weight="0.25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickTop"
                        android:text="@string/default_button" />
                    <RadioButton
                        android:id="@+id/invert"
                        android:layout_weight="0.25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickTop"
                        android:text="Inverted" />
                    <RadioButton
                        android:id="@+id/gray"
                        android:layout_weight="0.25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickTop"
                        android:text="Grayscale" />
                </RadioGroup>
                <RadioGroup
                    android:id="@+id/button_group2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:orientation="horizontal"
                    android:translationZ="90dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintLeft_toRightOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/button_group"
                    app:layout_constraintVertical_bias="0.04">
                    <RadioButton
                        android:id="@+id/protan"
                        android:layout_weight="0.33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickBottom"
                        android:text="Protanopia" />
                    <RadioButton
                        android:id="@+id/deuteran"
                        android:layout_weight="0.33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickBottom"
                        android:text="Deuteranopia" />

                    <RadioButton
                        android:id="@+id/tritan"
                        android:layout_weight="0.33"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/purple_700"
                        android:onClick="onClickBottom"
                        android:text="Tritanopia" />
                </RadioGroup>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toBottomOf="@+id/alpha_slider"
                    app:layout_constraintBottom_toBottomOf="@+id/button_group"
                    app:layout_constraintBottom_toTopOf="@+id/start_button"
                    app:layout_constraintEnd_toStartOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:srcCompat="@drawable/box" />

                <Button
                    android:id="@+id/apply_filter"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:onClick="applyFilter"
                    android:text="@string/apply_filter"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_after" />

                <Button
                    android:id="@+id/revert_filter"
                    android:layout_width="180dp"
                    android:layout_height="45dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="4dp"
                    android:onClick="revertFilter"
                    android:text="@string/revert"
                    app:layout_constraintEnd_toStartOf="@+id/apply_filter"
                    app:layout_constraintHorizontal_bias="0.16"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_before" />

                <ImageView
                    android:id="@+id/img_before"
                    android:layout_width="195dp"
                    android:layout_height="155dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/image_content_description"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/mountains" />

                <ImageView
                    android:id="@+id/img_after"
                    android:layout_width="195dp"
                    android:layout_height="155dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/image_content_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/img_before"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/mountains" />

                <ToggleButton
                    android:id="@+id/start_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textOff="Apply to Phone Screen"
                    android:textOn="Off"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

